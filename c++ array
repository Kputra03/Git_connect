#include <iostream>
using namespace std;

int main() {
 const int ANGKA = 10;
    int nomor[ANGKA];
    int maxNumber, minNumber;
    cout << "Masukkan 10 angka:\n";
    for(int i = 0; i < ANGKA; i++) {
    in >> nomor[i];
     }
     
     maxNumber = nomor[0];
     minNumber = nomor[0];
     for(int i = 1; i < ANGKA; i++) {
        if(nomor[i] > maxNumber) {
           maxNumber = nomor[i];}
        if(nomor[i] < minNumber) {
        minNumber = nomor[i];}
     }

    cout << "Nilai maksimum: " << maxNumber << endl;
    cout << "Nilai minimum: " << minNumber << endl;

    return 0;
}





